<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="sslforpage" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="sslRole" vmsize="Small">
    <Runtime executionContext="elevated" />
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="httpEndpoint" />
          <Binding name="Endpoint2" endpointName="sslEndpoint" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="httpEndpoint" protocol="http" port="80" />
      <InputEndpoint name="sslEndpoint" protocol="https" port="443" certificate="sitecert" />
    </Endpoints>
    <Certificates>
      <Certificate name="sitecert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
    <Imports>
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
  </WebRole>
</ServiceDefinition>